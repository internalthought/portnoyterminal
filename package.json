{
  "name": "portnoyterminal",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "node --test",
    "test:unit": "node --test",
    "typecheck": "tsc -p tsconfig.base.json --noEmit",
    "lint": "eslint \"{packages,tools,tests}/**/*.{ts,tsx,js,jsx,mjs,cjs}\"",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}
